<div id="<%= dom_id person %>">
  <table class="table is-hoverable is-striped is-fullwidth mt-3">
    <tbody>
      <tr>
        <th>ID</th>
        <td><%= person.id %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= person.name %></td>
      </tr>
      <tr>
        <th>Height</th>
        <td><%= person.height %></td>
      </tr>
      <tr>
        <th>Mass</th>
        <td><%= person.mass %></td>
      </tr>
      <tr>
        <th>Hair Color</th>
        <td><%= person.hair_color %></td>
      </tr>
      <tr>
        <th>Skin Color</th>
        <td><%= person.skin_color %></td>
      </tr>
      <tr>
        <th>Eye Color</th>
        <td><%= person.eye_color %></td>
      </tr>
      <tr>
        <th>Birth Year</th>
        <td><%= person.birth_year %></td>
      </tr>
      <tr>
        <th>Gender</th>
        <td><%= person.gender %></td>
      </tr>
    </tbody>
  </table>
</div>
