<p style="color: green"><%= notice %></p>

<%= render @person %>
<% if @species %>
  <p>Species: <%= link_to @species.name, species_people_path(@species) %></p>
<% else %>
    <p>Species: Unknown </p>
<% end %>

<% if @planet %>
  <p>Planet: <%= link_to @planet.name, planet_people_path(@planet) %></p>
<% else %>
    <p>Planet: Unknown </p>
<% end %>


  <h2>Starships</h2>
  <% if @starships.any? %>
    <ul>
      <% @starships.each do |starship| %>
        <li><%= link_to starship.name, show_association_person_path(@person, association: 'starships') %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No starships associated with this person.</p>
  <% end %>

  <h2>Films</h2>
  <% if @films.any? %>
    <ul>
      <% @films.each do |film| %>
        <li><%= link_to film.title, show_association_person_path(@person, association: 'films') %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No films associated with this person.</p>
  <% end %>

  <h2>Vehicles</h2>
  <% if @vehicles.any? %>
    <ul>
      <% @vehicles.each do |vehicle| %>
        <li><%= link_to vehicle.name, show_association_person_path(@person, association: 'vehicles') %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No vehicles associated with this person.</p>
  <% end %>
</div>





<div>
  <%= link_to "Edit this person", edit_person_path(@person.id) %> |
  <%= link_to "Delete this person", person_path(@person.id), method: :delete, data: { confirm: "Are you sure you want to delete this person?" } %> |
  <%= link_to "Back to all people", people_path %>
</div>
