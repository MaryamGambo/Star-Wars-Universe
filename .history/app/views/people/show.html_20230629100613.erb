<p class="has-text-success"><%= notice %></p>

<div class="box mt-3">
  <div class="content">
    <%= render @person %>

    <% if @species %>
      <p><strong>Species:</strong> <%= link_to @species.name, species_people_path(@species) %></p>
    <% else %>
      <p><strong>Species:</strong> Unknown</p>
    <% end %>

    <% if @planet %>
      <p><strong>Planet:</strong> <%= link_to @planet.name, planet_people_path(@planet) %></p>
    <% else %>
      <p><strong>Planet:</strong> Unknown</p>
    <% end %>

    <h2 class="title is-2">Starships</h2>
    <% if @starships && @starships.any? %>
      <ul>
        <% @starships.each do |starship| %>
          <li><%= link_to starship.name, starship_people_path(starship) %></li>
        <% end %>
      </ul>
    <% else %>
      <p>No starships associated with this person.</p>
    <% end %>

    <h2 class="title is-2">Films</h2>
    <% if @films && @films.any? %>
      <ul>
        <% @films.each do |film| %>
          <li><%= link_to film.title, film_people_path(film) %></li>
        <% end %>
      </ul>
    <% else %>
      <p>No films associated with this person.</p>
    <% end %>

    <h2 class="title is-2">Vehicles</h2>
    <% if @vehicles && @vehicles.any? %>
      <ul>
        <% @vehicles.each do |vehicle| %>
          <li><%= link_to vehicle.name, vehicle_people_path(vehicle) %></li>
        <% end %>
      </ul>
    <% else %>
      <p>No vehicles associated with this person.</p>
    <% end %>
  </div>

  <div class="buttons mt-3">
    <%= link_to "Edit this person", edit_person_path(@person.id), class: "button is-primary" %>
    <%= link_to "Delete this person", person_path(@person.id), method: :delete, data: { confirm: "Are you sure you want to delete this person?" }, class: "button is-danger" %>
    <%= link_to "Back to all people", people_path, class: "button is-info" %>
  </div>
</div>
