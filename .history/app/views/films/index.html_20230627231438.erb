<div class="container">
  <p class="has-text-success"><%= notice %></p>

  <h1 class="title is-1 mt-5">Films</h1>

  <table class="table is-hoverable is-striped is-fullwidth mt-3">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Director</th>
        <th>Release Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @films.each do |film| %>
        <%= render partial: "film", locals: { film: film } %>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New film", new_film_path, class: "button is-primary" %>
</div>
